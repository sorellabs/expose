vendor(prop, args)
  -webkit-{prop}: args
  -moz-{prop}:    args
  -ms-{prop}:     args
  -o-{prop}:      args
  {prop}:         args


// == Borders ==========================================================
border-radius()
  vendor: border-radius arguments


// == Shadows ==========================================================
box-shadow()
  vendor: box-shadow arguments

text-shadow()
  vendor: text-shadow arguments


// == Animations =======================================================
transition()
  vendor: transition arguments

animation()
  vendor: animation arguments


// == Transformations ==================================================
transform()
  vendor: transform arguments

rotate(degrees)
  transform: rotate(degrees)

scale(degrees)
  transform: scale(degrees)

translate(x, y)
  transform: translate(x, y)

skew(degrees)
  transform: skew(degrees)

translate-3d(x, y, z)
  transform: translate(x, y, z)


// == Background =======================================================
background-clip()
  vendor: background-clip arguments

background-size()
  vendor: background-size arguments


// == Box Model ========================================================
box-sizing()
  vendor: box-sizing arguments